<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DoctorMapper">

    <!-- insert into doctor (username, password, ...) values ('doctor', 'doctor', ...) -->
    <insert id="insert" parameterType="com.example.entity.Doctor" useGeneratedKeys="true">
        insert into `doctor`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="avatar != null">avatar,</if>
            <if test="role != null">role,</if>
            <if test="workTime != null">work_time,</if>
            <if test="descr != null">descr,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="role != null">#{role},</if>
            <if test="workTime != null">#{work_time},</if>
            <if test="descr != null">#{descr},</if>
        </trim>
    </insert>

    <select id="selectAll" resultType="com.example.entity.Doctor">
        select * from `doctor`
        <where>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>

    <update id="updateById" parameterType="com.example.entity.Doctor">
        update `doctor`
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="avatar != null">
                work_time = #{workTime},
            </if>
            <if test="role != null">
                descr = #{descr},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete from `doctor`
        where id = #{id}
    </delete>

</mapper>